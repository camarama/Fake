{% extends 'adminBase.html.twig' %}

{% block body %}
    <div class="box-header with-border">
        <h3 class="box-title">Gérer la page</h3>
    </div>
    <div class="box-body">
        <div class="row">
            <div class="col-md-12">
                <table class="table table-hover table-condensed">
                    <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ page.id }}</td>
                    </tr>
                    <tr>
                        <th>Titre</th>
                        <td>{{ page.titre }}</td>
                    </tr>
                    <tr>
                        <th>Contenu</th>
                        <td>{{ page.contenu }}</td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="box-footer">
        <div class="row">
            <div class="col-xs-6 col-md-4">
                <a class="btn btn-primary" href="{{ path('admin/Pages_index') }}">Retour à la liste</a>
            </div>
            <div class="col-xs-6 col-md-4">
                <a class="btn btn-warning" href="{{ path('admin/Pages_edit', { 'id': page.id }) }}">Modifier</a>
            </div>
            <div class="col-xs-6 col-md-4">
                {{ form_start(delete_form) }}
                    <input class="btn btn-danger" type="submit" value="Supprimer">
                {{ form_end(delete_form) }}
            </div>
        </div>
    </div>
{% endblock %}
