{% extends 'adminBase.html.twig' %}

{% block body %}
    <div class="box-header with-border">
        <h3 class="box-title">Liste des pages</h3>
    </div>
    <div class="box-body">
        <div class="row">
            <div class="col-md-12">
                <table class="table table-striped table-hover table-condensed">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Titre</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for page in pages %}
                        <tr>
                            <td><a href="{{ path('admin/Pages_show', { 'id': page.id }) }}">{{ page.id }}</a></td>
                            <td>{{ page.titre }}</td>
                            <td>
                                <a class="btn btn-success" href="{{ path('admin/Pages_show', { 'id': page.id }) }}">Voir</a>
                                <a class="btn btn-warning" href="{{ path('admin/Pages_edit', { 'id': page.id }) }}">Modifier</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="box-footer">
        <div class="row">
            <div class="col-md-12">
                <a class="btn btn-primary" href="{{ path('admin/Pages_new') }}">Cr√©er une nouvelle page</a>
            </div>
        </div>
    </div>
{% endblock %}
