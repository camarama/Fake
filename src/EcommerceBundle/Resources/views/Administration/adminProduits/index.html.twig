{% extends 'adminBase.html.twig' %}

{% block body %}
    <div class="box-header with-border">
        <h1 class="box-title">Gestion des produits</h1>
    </div>
    <div class="box-body">
        <div class="row">
            <div class="col-md-12">
                <table class="table table-striped table-hover table-condensed">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Nom</th>
                            <th>Prix</th>
                            <th>Disponible</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for produit in produits %}
                        <tr>
                            <td><a href="{{ path('produit_show', { 'id': produit.id }) }}">{{ produit.id }}</a></td>
                            <td>{{ produit.nom }}</td>
                            <td>{{ produit.prix }}</td>
                            <td>{% if produit.disponible %}Oui{% else %}Non{% endif %}</td>
                            <td>
                                <a class="btn btn-success" href="{{ path('produit_show', { 'id': produit.id }) }}">Voir</a>
                                <a class="btn btn-warning" href="{{ path('produit_edit', { 'id': produit.id }) }}">Modifier</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="box-footer">
        <div class="row">
            <div class="col-md-12">
                <a class="btn btn-primary" href="{{ path('produit_new') }}">Cr√©er un nouveau produit</a>
            </div>
        </div>
    </div>
{% endblock %}
