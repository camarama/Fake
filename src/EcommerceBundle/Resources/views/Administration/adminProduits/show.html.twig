{% extends 'adminBase.html.twig' %}

{% block body %}
    <div class="box-header with-border">
        <h3 class="box-title">Gestion du produit</h3>
    </div>
    <div class="box-body">
        <div class="row">
            <div class="col-md-12">
                <table class="table table-hover table-condensed">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ produit.id }}</td>
                        </tr>
                        <tr>
                            <th>Nom</th>
                            <td>{{ produit.nom }}</td>
                        </tr>
                        <tr>
                            <th>Prix</th>
                            <td>{{ produit.prix }}</td>
                        </tr>
                        <tr>
                            <th>Disponible</th>
                            <td>{% if produit.disponible %}Oui{% else %}Non{% endif %}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="box-footer">
        <div class="row">
            <div class="col-md-12">
                <div class="col-md-4">
                    <a class="btn btn-primary" href="{{ path('produit_index') }}">Back to the list</a>
                </div>
                <div class="col-md-4">
                    <a class="btn btn-warning col-md-4" href="{{ path('produit_edit', { 'id': produit.id }) }}">Edit</a>
                </div>
                <div class="col-md-4">
                    {{ form_start(delete_form) }}
                        <input class="btn btn-danger col-md-4" type="submit" value="Delete">
                    {{ form_end(delete_form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
