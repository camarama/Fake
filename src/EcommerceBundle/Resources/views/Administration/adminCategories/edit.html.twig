{% extends 'adminBase.html.twig' %}

{% block body %}
    <div class="box-header with-border">
        <h3 class="box-title col-md-4">Modifier vos catégories</h3>
    </div>
    <div class="box-body">
        <div class="row">
            <div class="col-md-12">
                {{ form_start(edit_form) }}
                    {{ form_widget(edit_form) }}

                    <div class="col-md-5 col-md-offset-5">
                        <input class="btn btn-warning" type="submit" value="Modifier" />
                    </div>

                {{ form_end(edit_form) }}
            </div>
        </div>
    </div>

    <div class="box-footer">
        <div class="row">
            <div class="col-md-12">
                <div class="col-md-10">
                    <a class="btn btn-primary" href="{{ path('admin_categories_index') }}">Retour à la liste</a>
                </div>
                <div class="col-md-1">
                    {{ form_start(delete_form) }}
                        <input class="btn btn-danger" type="submit" value="Supprimer">
                    {{ form_end(delete_form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
