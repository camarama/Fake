{% extends 'adminBase.html.twig' %}

{% block body %}
    <div class="box-header with-border">
        <h3 class="box-title">Gestion des cat√©gories</h3>
    </div>
    <div class="box-body">
        <div class="row">
            <div class="col-md-12">
                <table class="table table-hover table-condensed">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ category.id }}</td>
                        </tr>
                        <tr>
                            <th>Nom</th>
                            <td>{{ category.nom }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="box-footer">
        <div class="row">
            <div class="col-md-12">
                <div class="col-md-4">
                    <a class="btn btn-primary" href="{{ path('admin_categories_index') }}">Back to the list</a>
                </div>
                <div class="col-md-4">
                    <a class="btn btn-warning col-md-4" href="{{ path('admin_categories_edit', { 'id': category.id }) }}">Edit</a>
                </div>
                <div class="col-md-4">
                    {{ form_start(delete_form) }}
                        <input class="btn btn-danger col-md-4" type="submit" value="Delete">
                    {{ form_end(delete_form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
