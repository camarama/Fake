{% extends 'adminBase.html.twig' %}

{% block body %}

    <div class="box-header with-border">
        <h1 class="box-title">Gestion des Categories</h1>
    </div>
    <div class="box-body">
        <div class="row">
            <div class="col-md-12">
                <table class="table table-striped table-hover table-condensed">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Nom</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for category in categories %}
                        <tr>
                            <td>
                                <a href="{{ path('admin_categories_show', { 'id': category.id }) }}">{{ category.id }}</a>
                            </td>
                            <td>{{ category.nom }}</td>
                            <td>
                                <a class="btn btn-success" href="{{ path('admin_categories_show', { 'id': category.id }) }}">Voir</a>
                                <a class="btn btn-warning" href="{{ path('admin_categories_edit', { 'id': category.id }) }}">Modifier</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="box-footer">
        <div class="row">
            <div class="col-md-12">
                <a class="btn btn-primary" href="{{ path('admin_categories_new') }}">Créer une nouvelle catégorie</a>
            </div>
        </div>
    </div>
{% endblock %}
