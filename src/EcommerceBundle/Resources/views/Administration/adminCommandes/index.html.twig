{% extends 'adminBase.html.twig' %}

{% block body %}
    <div class="box-header with-border">
        <h1 class="box-title">Gestion des Commandes</h1>
    </div>
    <div class="box-body">
        <div class="row">
            <div class="col-md-12">
                <table class="table table-striped table-hover table-condensed">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Client</th>
                            <th>Date</th>
                            <th>Montant</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for commande in commandes %}
                        <tr>
                            <td><a href="{{ path('admin_commandes_show', { 'id': commande.id }) }}">{{ commande.id }}</a></td>
                            <td>{% if commande.utilisateur %}{{ commande.utilisateur.username }}{% endif %}</td>
                            <td>{% if commande.date %}{{ commande.date|date('d/m/Y H:i:s') }}{% endif %}</td>
                            <td>{% if commande.commande %}{{ commande.commande.prixTTC }}{% endif %}</td>
                            <td>
                                <a target="_blank" href="{{ path('admin_commandes_show', { 'id': commande.id }) }}"><i class="fa fa-file-pdf-o" aria-hidden="true"></i></a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
