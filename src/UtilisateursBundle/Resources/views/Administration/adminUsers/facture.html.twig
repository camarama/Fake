{% extends 'adminBase.html.twig' %}

{% block body %}
    <div class="box-header with-border">
        <h1 class="box-title">Gestion des factures</h1>
    </div>
    <div class="box-body">
        <div class="row">
            <div class="col-md-12">
                <table class="table table-striped table-hover table-condensed">
                    <thead>
                    <tr>
                        <th>Date</th>
                        <th>Montant</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for facture in utilisateur.commandes %}
                        <tr>
                            <td>{% if facture.date %}{{ facture.date|date('d/m/Y H:i:s') }}{% endif %}</td>
                            <td>{% if facture.commande %}{{ facture.commande.prixTTC }}{% endif %}</td>
                            <td>
                                <a target="_blank" href="{{ path('utilisateurs_utilisateur_facturepdf', { 'id': facture.id }) }}"><i class="fa fa-file-pdf-o" aria-hidden="true"></i></a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
