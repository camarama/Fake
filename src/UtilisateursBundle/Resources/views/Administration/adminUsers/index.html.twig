{% extends 'adminBase.html.twig' %}

{% block body %}
    <div class="box-header with-border">
        <h1 class="box-title">Gestion des Clients</h1>
    </div>
    <div class="box-body">
        <div class="row">
            <div class="col-md-12">
                <table class="table table-striped table-hover table-condensed">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Client</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for utilisateur in utilisateurs %}
                        <tr>
                            <td><a href="{{ path('admin_utilisateurs_show', { 'id': utilisateur.id }) }}">{{ utilisateur.id }}</a></td>
                            <td>{{ utilisateur.username }}</td>
                            <td>
                                {% if utilisateur.adresses|length != 0 %}
                                    <a class="btn btn-primary" href="{{ path('admin_utilisateurs_show', { 'id': utilisateur.id }) }}" title="Consulter les adresses">Info</a>
                                {% endif %}
                                {% if utilisateur.commandes|length != 0 %}
                                    <a class="btn btn-success" href="{{ path('admin_utilisateur_facture', { 'id': utilisateur.id }) }}" title="Consulter les factures">Factures</a>
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    
{% endblock %}
