{% extends 'adminBase.html.twig' %}

{% block body %}
    <div class="box-header with-border">
        <h1 class="box-title">Les Clients</h1>
    </div>
    <div class="box-body">
        <div class="row">
            <div class="col-md-12">
                <table class="table table-striped table-hover table-condensed">
                    <thead>
                    <tr>
                        <th>Prenom</th>
                        <th>Nom</th>
                        <th>Adresse</th>
                        <th>Pays</th>
                        <th>Téléphone</th>

                    </tr>
                    </thead>
                    <tbody>
                        {% for adresse in utilisateur.adresses %}
                        <tr>
                            <td>{{ adresse.prenom }}</td>
                            <td>{{ adresse.nom }}</td>
                            <td>{{ adresse.numeroRue }} {{ adresse.adresse }} , {{ adresse.ville }}</td>
                            <td>{{ adresse.pays }}</td>
                            <td>{{ adresse.telephone }}</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="box-footer">
        <div class="row">
            <div class="col-md-12">
                <a class="btn btn-primary" href="{{ path('admin_utilisateurs_index') }}">Retour à la liste</a>
            </div>
        </div>
    </div>
{% endblock %}
